<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    android:backgroundTintMode="screen"
    android:background="#F5F5F5"
    >

  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:padding="5dp"
      android:text="PRABODH"
      android:textAllCaps="true"
      android:layout_marginStart="5dp"
      android:textColor="#000000"
      android:textSize="20sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="edit"
      android:textAllCaps="true"
      android:textSize="15sp"
      android:textColor="@color/colorAccent"
      android:backgroundTint="@color/white"
      android:padding="5dp"


      android:layout_marginEnd="5dp"
      android:layout_alignBottom="@+id/name"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      />

  <TextView
      android:background="@color/white"
      android:id="@+id/email_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="7757803132 . prabodhmayekar@gmail.com"
      android:padding="5dp"
      android:textSize="15sp"

      android:layout_below="@+id/name"
      android:layout_alignStart="@+id/name"
      android:layout_alignEnd="@+id/edit"
      />
  <View
      android:id="@+id/border"
      android:layout_below="@+id/email_number"
      android:layout_width="match_parent"
      android:layout_height="4dp"
      android:background="@color/colorPrimaryDark"
      android:layout_alignStart="@+id/name"
      android:layout_alignEnd="@+id/edit"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      />
  <RelativeLayout
      android:id="@+id/my_ac"
      android:background="@color/white"
      android:layout_below="@id/border"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/name"
      android:layout_alignEnd="@+id/edit"
      android:paddingBottom="10sp"
      android:paddingTop="10sp"
      android:clickable="true"
      >
      <TextView
          android:id="@+id/my_ac_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="My Account"
          android:textSize="15sp"
          android:textColor="#000000"
          android:paddingStart="5dp"/>
    <TextView
        android:layout_below="@+id/my_ac_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:textSize="10sp"
        android:text="Address, Payments, Favourites, Referrals &amp; offers"/>

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/my_menu"
      android:background="@color/white"
      android:layout_below="@id/my_ac"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/name"
      android:layout_alignEnd="@+id/edit"
      android:paddingBottom="10sp"
      android:paddingTop="10sp"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        />
    <LinearLayout
        android:id="@+id/m_addr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:clickable="true"
        >

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/home"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:padding="10sp"
          android:gravity="center"
          android:textSize="15sp"
          android:text="Manage Address"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_pay"
        android:layout_below="@+id/m_addr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:clickable="true"
        >

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/payment"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:padding="10sp"
          android:gravity="center"
          android:textSize="15sp"
          android:text="Payments"/>
    </LinearLayout>
  </RelativeLayout>

  <View
      android:id="@+id/border2"
      android:layout_below="@+id/my_menu"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorPrimary"
      />
  <RelativeLayout
      android:background="@color/white"
      android:id="@+id/help"
      android:layout_below="@id/border2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignStart="@+id/name"
      android:layout_alignEnd="@+id/edit"
      android:paddingBottom="10sp"
      android:paddingTop="10sp"
      android:clickable="true"
      >
    <TextView
        android:id="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="15sp"
        android:textColor="#000000"
        android:paddingStart="5dp"/>
    <TextView
        android:layout_below="@+id/help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:textSize="10sp"
        android:text="FAQs &amp; Links"/>

  </RelativeLayout>
  <View
      android:id="@+id/border3"
      android:layout_below="@+id/help"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorPrimary"
      />
  <Button
      android:id="@+id/logout"
      android:text="Logout"
      android:textColor="#111111"
      android:textSize="20sp"
      android:background="@color/white"
      android:layout_below="@id/border3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

</RelativeLayout>