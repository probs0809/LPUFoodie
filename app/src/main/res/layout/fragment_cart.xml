<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <View
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_marginTop="100sp"
            android:background="@drawable/ic_restaurant_24px"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Hey Foodie, Your Cart Is Empty :("
            android:gravity="center"
        />
    </FrameLayout>

    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="110sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/cart_value"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50sp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="10sp"
        android:text="Final Value : \t\t100"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="bottom"
        android:id="@+id/bottom_button"
        android:visibility="gone">
        <Button
            android:id="@+id/clear_cart"
            android:background="@color/colorPrimaryDark"
            android:layout_width="205sp"
            android:layout_height="match_parent"
            android:text="@string/clear_cart"/>
        <Button
            android:id="@+id/order"
            android:background="@color/colorPrimary"
            android:layout_width="205sp"
            android:layout_height="match_parent"
            android:text="@string/proceed"/>
    </LinearLayout>

</FrameLayout>